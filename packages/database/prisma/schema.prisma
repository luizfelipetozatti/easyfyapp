// ============================================================
// Easyfy - Schema Prisma
// Multi-tenant SaaS de agendamento com WhatsApp
// ============================================================

generator client {
  provider      = "prisma-client-js"
  engineType    = "client"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================================
// ENUMS
// ============================================================

enum BookingStatus {
  PENDENTE
  CONFIRMADO
  CANCELADO
  CONCLUIDO
}

enum UserRole {
  OWNER
  ADMIN
  MEMBER
}

enum OrganizationStatus {
  ACTIVE
  DELETED
  PENDING_REACTIVATION
}

enum WhatsAppTemplateType {
  CONFIRMATION
  CANCELLATION
  REMINDER
}

// ============================================================
// MULTI-TENANCY: Organizations
// ============================================================

model Organization {
  id                  String             @id @default(uuid()) @db.Uuid
  name                String             // Unique parcial via migration: apenas ACTIVE
  slug                String             // Unique parcial via migration: apenas ACTIVE
  whatsappNumber      String?            @map("whatsapp_number")
  apiKeyWhatsapp      String?            @map("api_key_whatsapp")
  evolutionInstance   String?            @map("evolution_instance")
  logoUrl             String?            @map("logo_url")
  timezone            String             @default("America/Sao_Paulo")
  status              OrganizationStatus @default(ACTIVE)
  deletedAt           DateTime?          @map("deleted_at")
  deletedBy           String?            @map("deleted_by") @db.Uuid
  reactivationToken   String?            @unique @map("reactivation_token")
  reactivationExpires DateTime?          @map("reactivation_expires")
  createdAt           DateTime           @default(now()) @map("created_at")
  updatedAt           DateTime           @updatedAt @map("updated_at")

  // Relations
  members          OrganizationMember[]
  services         Service[]
  bookings         Booking[]
  workingHours     WorkingHours[]
  breakTime        BreakTime[]
  unavailableDays  UnavailableDay[]
  fullyBookedDays  FullyBookedDay[]
  whatsappTemplates WhatsAppTemplate[]

  @@map("organizations")
}

// ============================================================
// USERS & MEMBERSHIP
// ============================================================

model User {
  id         String   @id @default(uuid()) @db.Uuid
  email      String   @unique
  name       String?
  avatarUrl  String?  @map("avatar_url")
  supabaseId String?  @unique @map("supabase_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  memberships OrganizationMember[]

  @@map("users")
}

model OrganizationMember {
  id             String   @id @default(uuid()) @db.Uuid
  userId         String   @map("user_id") @db.Uuid
  organizationId String   @map("organization_id") @db.Uuid
  role           UserRole @default(MEMBER)
  createdAt      DateTime @default(now()) @map("created_at")

  // Relations
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@map("organization_members")
}

// ============================================================
// SERVICES (Serviços oferecidos)
// ============================================================

model Service {
  id              String   @id @default(uuid()) @db.Uuid
  organizationId  String   @map("organization_id") @db.Uuid
  name            String
  description     String?
  price           Decimal  @db.Decimal(10, 2)
  durationMinutes Int      @map("duration_minutes")
  active          Boolean  @default(true)
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Relations
  organization    Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  bookings        Booking[]
  fullyBookedDays FullyBookedDay[]

  @@index([organizationId])
  @@map("services")
}

// ============================================================
// BOOKINGS (Agendamentos)
// ============================================================

model Booking {
  id             String        @id @default(uuid()) @db.Uuid
  organizationId String        @map("organization_id") @db.Uuid
  serviceId      String        @map("service_id") @db.Uuid
  clientName     String        @map("cliente_nome")
  clientPhone    String        @map("cliente_phone")
  clientEmail    String?       @map("cliente_email")
  startTime      DateTime      @map("start_time")
  endTime        DateTime      @map("end_time")
  status         BookingStatus @default(PENDENTE)
  notes          String?
  whatsappSent   Boolean       @default(false) @map("whatsapp_sent")
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  service      Service      @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([organizationId, startTime])
  @@index([organizationId, status])
  @@map("bookings")
}

// ============================================================
// AVAILABILITY (Disponibilidade de agendamentos)
// ============================================================

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model WorkingHours {
  id             String   @id @default(uuid()) @db.Uuid
  organizationId String   @map("organization_id") @db.Uuid
  dayOfWeek      DayOfWeek
  startTime      String   @map("start_time") // HH:mm (ex: "08:00")
  endTime        String   @map("end_time")   // HH:mm (ex: "17:00")
  isWorking      Boolean  @default(true) @map("is_working")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, dayOfWeek])
  @@index([organizationId])
  @@map("working_hours")
}

model BreakTime {
  id             String   @id @default(uuid()) @db.Uuid
  organizationId String   @map("organization_id") @db.Uuid
  label          String?  // Descrição do intervalo (ex: "Almoço", "Buscar filhos")
  startTime      String   @map("start_time") // HH:mm (ex: "12:00")
  endTime        String   @map("end_time")   // HH:mm (ex: "13:00")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@map("break_times")
}

model UnavailableDay {
  id             String   @id @default(uuid()) @db.Uuid
  organizationId String   @map("organization_id") @db.Uuid
  date           DateTime @db.Date // Data específica
  reason         String?  // Motivo (férias, feriado, etc)
  createdAt      DateTime @default(now()) @map("created_at")

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, date])
  @@index([organizationId])
  @@map("unavailable_days")
}

// ============================================================
// FULLY BOOKED DAYS (Cache materializado de dias lotados)
// Sinaliza quando TODOS os slots de um dia/serviço estão ocupados.
// Atualizado automaticamente a cada booking criado/cancelado.
// ============================================================

model FullyBookedDay {
  id             String   @id @default(uuid()) @db.Uuid
  organizationId String   @map("organization_id") @db.Uuid
  serviceId      String   @map("service_id") @db.Uuid
  date           DateTime @db.Date
  createdAt      DateTime @default(now()) @map("created_at")

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  service      Service      @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([organizationId, serviceId, date])
  @@index([organizationId, serviceId])
  @@index([organizationId, date])
  @@map("fully_booked_days")
}

// ============================================================
// WHATSAPP TEMPLATES (Templates personalizáveis por organização)
// Armazena somente os templates customizados.
// O fallback para os padrões é feito em código.
// ============================================================

model WhatsAppTemplate {
  id             String               @id @default(uuid()) @db.Uuid
  organizationId String               @map("organization_id") @db.Uuid
  type           WhatsAppTemplateType
  content        String               @db.Text

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, type])
  @@index([organizationId])
  @@map("whatsapp_templates")
}
